<svg contentScriptType="text/ecmascript" width="200" height="18"
  xmlns:xlink="http://www.w3.org/1999/xlink" zoomAndPan="magnify"
  contentStyleType="text/css" preserveAspectRatio="xMidYMid meet"
  xmlns="http://www.w3.org/2000/svg" version="1.0">
  <defs>
    <path id="cloud-upload" d="M19.35 10.04c-.68-3.45-3.71-6.04-7.35-6.04-2.89 0-5.4 1.64-6.65 4.04-3.01.32-5.35 2.87-5.35 5.96 0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96zm-5.35 2.96v4h-4v-4h-3l5-5 5 5h-3z"/>
  </defs>
  <linearGradient xmlns:xlink="http://www.w3.org/1999/xlink" x2="0" y2="100%"
                  xlink:type="simple" xlink:actuate="onLoad" id="a"
                  xlink:show="other">
      <stop stop-opacity=".7" stop-color="#fff" offset="0"/>
      <stop stop-opacity=".1" stop-color="#aaa" offset=".1"/>
      <stop stop-opacity=".3" offset=".9"/>
      <stop stop-opacity=".5" offset="1"/>
  </linearGradient>
  <rect rx="4"  fill="#555"     width="200" height="18"/>
  <rect rx="4"  fill="#4c1"     width="80"  height="18" x="120"/>
  <rect         fill="#4c1"     width="45"  height="18" x="120"/>
  <rect rx="4"  fill="url(#a)"  width="200" height="18"/>
  <g font-size="11" font-family="DejaVu Sans,Verdana,Geneva,sans-serif" fill="#fff">
      <text id="time_ago_shadow" fill="#010101" fill-opacity=".3" x="38" y="14">
      </text>
      <text id="time_ago" x="38" y="13">
      </text>
      <use xlink:href="#cloud-upload" fill="#fff" transform="scale(0.9)" x="6" y="-2"/>
      <text fill="#010101" fill-opacity=".3" x="133" y="14">
        <%= resource[:head] %>
      </text>
      <text x="133" y="13">
        <%= resource[:head] %>
      </text>
  </g>
  <script xlink:href="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js" />
  <script type="text/javascript">
    <![CDATA[
      var updated_at = <%= resource[:updated_at] %>;
      (function(){
        var time_ago = moment.unix(updated_at).fromNow();
        document.getElementById('time_ago').textContent = time_ago;
        document.getElementById('time_ago_shadow').textContent = time_ago;
        setTimeout(arguments.callee, 1000);
      })();
    ]]>
  </script>
</svg>